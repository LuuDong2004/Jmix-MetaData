<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="DbConnect">
        <createTable tableName="API_SOURCE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_API_SOURCE"/>
            </column>
            <column name="DECLARATIVE_MANIFEST_JSON" type="CLOB"/>
            <column name="DECLARATIVE_DEFINITION_ID" type="CLOB"/>
            <column name="BASE_URL" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="DbConnect">
        <createTable tableName="DATABASE_SOURCE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DATABASE_SOURCE"/>
            </column>
            <column name="DB_TYPE" type="VARCHAR(255)"/>
            <column name="HOST" type="VARCHAR(255)"/>
            <column name="PORT" type="BIGINT"/>
            <column name="DATABASE_" type="VARCHAR(255)"/>
            <column name="USERNAME" type="VARCHAR(255)"/>
            <column name="PASSWORD" type="VARCHAR(255)"/>
            <column name="TUNNEL_CONFIG_JSON" type="VARCHAR(255)"/>
            <column name="REPLICATION_JSON" type="VARCHAR(255)"/>
            <column name="SSL_CONFIG_JSON" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="DbConnect">
        <createTable tableName="FILE_SOURCE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_FILE_SOURCE"/>
            </column>
            <column name="DATASET_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="FILE_FORMAT" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="FILE_PROVIDER" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="URL" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="DbConnect">
        <createTable tableName="SOURCE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SOURCE"/>
            </column>
            <column name="DTYPE" type="VARCHAR(31)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(1000)"/>
            <column name="AIRBYTE_SOURCE_ID" type="VARCHAR(100)"/>
            <column name="RAW_CONFIGURATION" type="CLOB"/>
            <column name="SOURCE_TYPE" type="VARCHAR(255)"/>
            <column name="CREATE_AT" type="BIGINT"/>
            <column name="DEFINITION_ID" type="VARCHAR(255)"/>
            <column name="WORKSPACE_ID" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="DbConnect">
        <addForeignKeyConstraint baseColumnNames="ID" baseTableName="API_SOURCE" constraintName="FK_API_SOURCE_ON_ID"
                                 referencedColumnNames="ID" referencedTableName="SOURCE"/>
    </changeSet>
    <changeSet id="6" author="DbConnect">
        <addForeignKeyConstraint baseColumnNames="ID" baseTableName="DATABASE_SOURCE"
                                 constraintName="FK_DATABASE_SOURCE_ON_ID" referencedColumnNames="ID"
                                 referencedTableName="SOURCE"/>
    </changeSet>
    <changeSet id="7" author="DbConnect">
        <addForeignKeyConstraint baseColumnNames="ID" baseTableName="FILE_SOURCE" constraintName="FK_FILE_SOURCE_ON_ID"
                                 referencedColumnNames="ID" referencedTableName="SOURCE"/>
    </changeSet>
</databaseChangeLog>